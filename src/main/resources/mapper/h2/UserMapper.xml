<?xml version ="1.0" encoding ="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0// EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- Mapper and xml mapping -->
<mapper namespace ="ng.springbootproject.repository.UserMapper" >
    <!-- Mapping definition (user) -->
    <resultMap type ="ng.springbootproject.model.MUser" id ="user" >
        <id column ="user_id" property ="userId" />
        <result column ="password" property ="password" />
        <result column ="user_name" property ="userName" />
        <result column ="birthday" property ="birthday" />
        <result column ="age" property ="age" />
        <result column ="gender" property ="gender" />
        <result column ="department_id" property ="departmentId" />
        <result column ="role" property ="role" />
    </resultMap>
    <!-- user registration -->
    <insert id ="insertOne" >
        insert into m_user(
        user_id
        , password
        , user_name
        , birthday
        , age
        , gender
        , department_id
        , role
        )
        values (
        #{userId}
        , #{password}
        , #{userName}
        , #{birthday}
        , #{age}
        , #{gender}
        , #{departmentId}
        , #{role}
        )
    </insert>
    <!-- Get user(multiple) -->
    <select id ="findMany" resultType ="MUser" >
        select
        *
        from
        m_user
    </select>
    <!-- Get user(1record) -->
    <select id ="findOne" resultMap ="user" >
        select
        *
        from
        m_user
        where
        user_id = #{userId}
    </select>
    <!-- Update user -->
    <update id ="updateOne" >
        update
        m_user
        set
        password = #{password}
        , user_name = #{userName}
        where
        user_id = #{userId}
    </update>
    <!-- Delete user -->
    <delete id ="deleteOne" >
        delete from
        m_user
        where
        user_id = #{userId}
    </delete>
</mapper>
